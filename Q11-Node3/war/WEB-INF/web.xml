<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>OP1Servlet</servlet-name>
    <servlet-class>ag.ifpb.pod.q11.server.OP1ServletImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>OP1Servlet</servlet-name>
    <url-pattern>/op1</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>OP2Servlet</servlet-name>
    <servlet-class>ag.ifpb.pod.q11.server.UpdaterOP2ServletImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>OP2Servlet</servlet-name>
    <url-pattern>/op2/update</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
